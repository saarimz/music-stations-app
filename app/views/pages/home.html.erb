<div class="row text-center">
  <div class="now_playing">
    <div class="now_playing__title">
      <h3><strong>Now playing</strong>: <a href="/stations/<%= @home_station.id %>"><%= @home_station.title %></a></h3>
    </div>
    <div class="now_playing__content">
      <iframe width="100%" height="400" scrolling="no" frameborder="no" src=<%= @home_station.url %>></iframe>
    </div>
  </div>
  <%= link_to 'Go to all stations', stations_path, class: "btn btn-md btn-primary" %>
</div>
